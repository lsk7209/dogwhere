# 클라우드플레어 Pages 환경변수 설정
# 이 파일은 .env.local로 복사하여 사용하세요

# API 키 설정
GOOGLE_PLACES_KEY=your_google_places_api_key_here
KAKAO_API_KEY=your_kakao_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# 내부 토큰
INTERNAL_TOKEN=your_internal_token_here

# 관리자 인증 (필수)
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_secure_password_min_8_chars

# JWT 시크릿 (필수 - 최소 32자 이상의 랜덤 문자열)
JWT_SECRET=your_jwt_secret_key_min_32_characters_long

# Turso 데이터베이스 설정 (Vercel 배포 시)
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your_turso_auth_token

# 클라우드플레어 설정 (선택 - 기존 D1 사용 시)
CF_KV_NAMESPACE=your_kv_namespace_id
CF_D1_BINDING=your_d1_database_id
CF_R2_BUCKET=your_r2_bucket_name

# 슬랙 웹훅 (선택사항)
SLACK_WEBHOOK_URL=your_slack_webhook_url

# 공개 API URL
NEXT_PUBLIC_API_URL=https://your-domain.pages.dev
NEXT_PUBLIC_SITE_URL=https://your-domain.vercel.app

# Gemini API (컨텐츠 재생성용)
GEMINI_API_KEY=your_gemini_api_key

# 공공데이터포털 API 키 (선택)
PUBLIC_DATA_API_KEY=your_public_data_api_key

# 개발 환경 설정
NODE_ENV=production
